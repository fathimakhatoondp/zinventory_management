                    </customData>
                </Column> -->
            </columns>
            <items>
                <ColumnListItem type="Active" press="onPressRow" >
                    <cells>
                        <Text text="{ID}"></Text>
                        <Text text="{Name}"></Text>
                        <!-- <Text text="{Description}"></Text>
                        <Text text="{ReleaseDate}"></Text>
                        <Text text="{Rating}"></Text>
                        <Text text="{Price}"></Text> -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smarttable:SmartTable>
    </Page>
