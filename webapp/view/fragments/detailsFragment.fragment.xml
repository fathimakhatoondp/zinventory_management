<core:FragmentDefinition
    xmlns:layout="sap.ui.layout"
    xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:smartform="sap.ui.comp.smartform"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="dialogId"
        contentHeight="400px"
        contentWidth="700px"
        draggable="true"
        title="Product Details"
    >
        <smartform:SmartForm id="productDetailsSmartFormId">
            <smartform:layout>
                <!-- <smartform:ColumnLayout
                    columnsM="2"
                    columnsL="2"
                    columnsXL="3"
                /> -->
            </smartform:layout>
            <smartform:layoutData>
                <layout:GridData indent="L4 M4 S6"/>
            </smartform:layoutData>
            <smartform:Group>
                <!-- Product ID -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="ID"
                        value="{ID}"
                        editable="true"
                    />
                </smartform:GroupElement>

                <!-- Product Name -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Name"
                        value="{Name}"
                    />
                </smartform:GroupElement>

                <!-- Product Desription -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Description"
                        value="{Description}"
                    />
                </smartform:GroupElement>

                <!-- Product Release Date -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Release Date"
                        value="{ReleaseDate}"
                    />
                </smartform:GroupElement>

                <!-- Product Rating -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Rating"
                        value="{Rating}"
                    />
                </smartform:GroupElement>

                <!-- Product Price -->
                <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Price"
                        value="{Price}"
                    />
                </smartform:GroupElement>

                <!-- Product DiscontinuedDate -->
                <!-- <smartform:GroupElement>
                    <smartfield:SmartField
                        textLabel="Discontinued Date"
                        value="{DiscontinuedDate}"
                    />
                </smartform:GroupElement> -->
            </smartform:Group>
        </smartform:SmartForm>

        <endButton>
            <Button
                id="closeDetailsFragmentButtonId"
                type="Reject"
                text="Close"
                icon="sap-icon://cancel"
                press="onPressCloseInDetailsFragment"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
